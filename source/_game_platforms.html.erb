<%
platforms ||= []
%>
<% if gh = platforms.select{|x| x['type'] == 'github'}[0] %>
  <a href="<%= gh['url'] %>"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://github-camo.global.ssl.fastly.net/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png"></a>
<% end %>


<h3 class='footer-headings'>Get it!</h3>
<div class='big-icons platforms'>
  <% platforms.each do |platform| %>
    <% type = platform['type'] %>
    <% name = platform['name'] %>
    <% url = platform['url'] %>
    <div class='platform'>
      <a href='<%=url%>'>
        <%= image_tag "#{type}.png", class: 'icon' %>
        <p style='margin-top:15px;'><%= name %></p>
      </a>
    </div>
  <% end %>
  <div style='clear: both;'> </div>
</div>